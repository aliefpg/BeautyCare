<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="32dp">

    <ImageView
        android:id="@+id/ivOnboardingImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        android:contentDescription="Onboarding Image"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/tvOnboardingTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.67"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvOnboardingTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp" android:text="Title Text"
        android:textAlignment="center"
        android:textColor="@color/app_primary_text"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivOnboardingImage" />

    <TextView
    android:id="@+id/tvOnboardingDescription"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp" android:text="Description text goes here."
    android:textAlignment="center"
    android:textColor="@color/app_primary_text"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tvOnboardingTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>